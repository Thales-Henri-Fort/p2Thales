 private void clientesToolStripMenuItem_Click(object sender, EventArgs e)
        {
            CadastroClientesForm clientesForm = new CadastroClientesForm();
            clientesForm.TopLevel = false;
            clientesForm.FormBorderStyle = FormBorderStyle.None;
            clientesForm.Dock = DockStyle.Fill;
            panelConteudo.Controls.Clear();
            panelConteudo.Controls.Add(clientesForm);
            clientesForm.Show();
        }

        private void produtosToolStripMenuItem_Click(object sender, EventArgs e)
        {
